<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock Pro"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackText"
                    android:background="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:id="@+id/welcomenote"
                android:orientation="vertical"
                android:background="@color/colorLightPrimary"

                >
                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name:"
                    android:textColor="@color/colorBlackText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="18dp"

                    />
                <TextView
                    android:id="@+id/orgTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name:"
                    android:textColor="@color/colorBlackText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="18dp"
                    android:layout_marginBottom="25dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/productpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcomenote"
                android:onClick="projectlist"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/replacelist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="Products: 0"
                    android:textColor="@color/colorBlackText"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/prbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Add New Product" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stockpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productpan"
                android:onClick="projectlist"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stkTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="Stock In: 0"
                    android:textColor="@color/colorBlackText"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/stkbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Add New Stock" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>